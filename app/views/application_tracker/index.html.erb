<div class='container mt-5'>
  <div class="text-center mb-3 border-bottom">
    <h1>Students</h1>
  </div>
  <div class="mb-5">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Avion Batch</th>
          <th scope="col">Avion Status</th>
          <th scope="col">Github ID</th>
          <th scope="col">LinkedIn Link</th>
        </tr>
      </thead>
      <tbody>
        <% @user_infos.each do |u| %>
          <tr>
            <td><%= u.f_name %></td>
            <td><%= u.l_name %></td>
            <td><%= u.avion_batch %></td>
            <td><%= u.avion_status %></td>
            <td><%= u.github_id %></td>
            <td><%= u.linkedin_link %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <h1 class='py-3 text-center mb-5'>Application Tracker</h1>
  <%= form_with method: :get do |form| %>
    <div class="row g-3 mb-3">
      <div class="col-11">
        <%= select_tag(:student, options_for_select(@name_list),class: 'form-select', include_blank: "Select Student")  %>
      </div>
      <div class="col-1">
        <%= form.submit "Search", class: 'btn btn-success w-100' %>
      </div>
    </div>
  <% end %>
  <% if @search_name %>
    <p class='py-3 mb-5 lead text-center'>
      Showing Results for <%= @search_name.f_name %> <%= @search_name.l_name %>
    </p>
  <% end %>
  <% @applications.each do |a| %>
    <div class='m-3 my-4'>
      <h5 class=""><%= link_to a.job.company, a %></h5>
      <p class="lead"><%= a.job.title %></p>
    </div>
  <% end %>
</div>
