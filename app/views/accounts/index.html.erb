<div class = 'container'>
  <section class="p-5">
    <div  class="container">
      <div class="d-flex justify-content-between mb-3 border-bottom">
        <h1>Accounts</h1>
      </div>
      <div>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">E-mail</th>
              <th scope="col">Account Type</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.email %></td>
                <td>
                  <%= user.account_type %>
                </td>
                <td>
                  <a href ="<%= edit_account_path(user) %>">
                    Change Account Type
                  </a>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</div>
