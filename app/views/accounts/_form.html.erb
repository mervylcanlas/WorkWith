<%= form_for( @user_account, url: account_path ) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this job from being saved:</h2>
      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row justify-content-center">
    <div class="col-md-4">
      <%= f.label :email, class:"col-form-label"%>
      <%= f.text_field :email, autofocus: true, autocomplete: "off", readonly: "", class: "form-control-plaintext" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-4">
      <%= f.label :account_type, class:"col-form-label"%>
      <%= f.select :account_type, options_for_select(["admin", "student"]), class: "form-select" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="border-top mt-2 col-md-4 d-grid">
      <%= f.submit "Change Account Type", class: "btn btn-primary mt-2" %>
    </div>
  </div>
<% end %>
