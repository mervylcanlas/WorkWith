<h1>New Job</h1>

<%= form_with model: @job do |form| %>

    <div>
        <%= form.label :company %><br>
        <%= form.text_field :company %>
        <% @job.errors.full_messages_for(:company).each do |message| %>
            <div>
                <%= message %>
            </div>
        <% end %>
    </div>

    <div>
        <%= form.label :link %><br>
        <%= form.text_field :link %><br>
        <% @job.errors.full_messages_for(:link).each do |message| %>
            <div>
                <%= message %>
            </div>
        <% end %>
    </div>

    <div>
        <%= form.label :contact_email %><br>
        <%= form.text_field :contact_email %><br>
        <% @job.errors.full_messages_for(:contact_email).each do |message| %>
            <div>
                <%= message %>
            </div>
        <% end %>
    </div>

    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %><br>
        <% @job.errors.full_messages_for(:title).each do |message| %>
            <div>
                <%= message %>
            </div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>

<% end %>