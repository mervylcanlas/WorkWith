<div class='container mt-5'>
    <div class='project_header'>
        <div class="text-center my-4">  
            <h2>Projects</h2>
        </div>
        <div class="text-center my-4">  
            <%= link_to "Add Project", new_project_path, class: 'btn btn-success' %>
        </div>
    </div>

    <% @list.each do |project| %>
        <div class='m-3 my-4'>
            <h5 class=""><%= link_to project.title, project_path(project) %></h5>
            <p class="lead"><%= project.overview %></p>
        </div>
    <% end %>
    
</div>

<style>
    .project_header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }
</style>